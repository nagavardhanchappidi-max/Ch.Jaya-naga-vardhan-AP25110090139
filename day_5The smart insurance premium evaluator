#include <stdio.h>

int main() {
    int age, health;
    char gender;
    float pre = 0;

    printf("Enter the age: ");
    scanf("%d", &age);

    printf("Enter the gender (M/F): ");
    scanf(" %c", &gender);

    printf("Health condition (1 = Healthy / 0 = Unhealthy): ");
    scanf("%d", &health);

    // -------- Age & Health Logic ----------
    if (age < 25) {
        if (health == 1)
            pre = 5000;
    }
    else if (age >= 25 && age <= 40) {
        if (health == 1)
            pre = 7000;
        else
            pre = 9500;
    }
    else if (age >= 41 && age <= 60) {
        if (health == 1)
            pre = 10000;
        else
            pre = 13000;
    }
    else if (age > 60) {
        if (health == 1)
            pre = 15000;
        else {
            printf("Not Eligible for Insurance\n");
            return 0;
        }
    }

    // -------- Gender Discount -------------
    if (gender == 'F' || gender == 'f') {
        pre = pre - (pre * 0.10);  // 10% discount
    }

    // -------- Output -------------
    printf("\n------ Customer Details ------\n");
    printf("Age: %d\n", age);
    printf("Gender: %c\n", gender);

    if (health == 1)
        printf("Health: Healthy\n");
    else
        printf("Health: Unhealthy\n");

    printf("Final Premium: â‚¹%.2f\n", pre);

    return 0;
}